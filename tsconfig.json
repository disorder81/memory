{
  // https://aka.ms/tsconfig
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
